{
  "name": "rollup-for-typescript",
  "version": "1.0.0",
  "description": "Test TypeScript with rollup and tsc.",
  "main": "dist/index.js",
  "license": "MIT",
  "private": true,
  "devDependencies": {
    "@rollup/plugin-run": "^3.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/identity-obj-proxy": "^3.0.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.4.1",
    "prettylint": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "rollup": "^4.27.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsc-watch": "^6.3.0",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "yarn@4.5.3",
  "scripts": {
    "build": "rollup -c",
    "clean": "rimraf dist-rollup/* & rimraf dist-tsc/* & rimraf coverage/*",
    "dev": "rollup -c -w",
    "lint": "yarn prettylint .",
    "test": "yarn jest --verbose",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "watch": "tsc-watch -p ./tsconfig.tsc-watch.json --onSuccess \"node ./dist-tsc/index.js\""
  },
  "type": "module"
}
